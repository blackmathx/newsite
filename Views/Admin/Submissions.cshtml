@{
	Layout = "AdminLayout";
}

<h1>Submissions</h1>

@{
	ViewData["Title"] = "Submissions";
}
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Submitted By</th>
			<th>Title</th>
			<th>Url</th>
			<th>Comment</th>
			<th>Created At</th>		
			<th>Active</th>
		</tr>
	</thead>

    <tbody>
@foreach (var submission in ViewBag.Submissions)
{
	<tr>
		<td>		
			<a href="@Url.Action("DeleteSubmission", "Admin", new { id = submission.Id })" class="btn btn-danger btn-sm">Delete</a>
			<a href="@Url.Action("SubmissionConvertToDraft", "Admin", new { id = submission.Id })" class="btn btn-primary btn-sm">Draft Post</a> 
		</td>
	
		<td>@submission.SubmittedBy</td>
		<td>@submission.Title</td>
		<td><a href="@submission.Url" target="_blank">@submission.Url</a></td>
		<td>@submission.Comment</td>
		<td>@submission.CreatedAt.ToShortDateString()</td>
		<td>@submission.Active</td>
	</tr>

}


	</tbody>
</table>