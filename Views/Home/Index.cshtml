@{
    ViewData["Title"] = "";
}



@if (ViewBag.Posts != null)
{
    <div class="d-flex flex-column">
        @foreach (var post in ViewBag.Posts)
        {
            <div class="m-2 w-100" style="min-width:320px; height:20px;">
                <div class=" d-flex align-items-center">
                    <span class="text-muted small mb-0 me-2" style="white-space:nowrap;">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                    <div>
                    <a href="@post.Url" target="_blank" class="text-decoration-none flex-grow-1">
                        <span class="fw-bold mb-0" style="font-size:1rem;">@post.Title</span>
                    </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No posts available.</p>
}