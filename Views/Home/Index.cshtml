@{
    ViewData["Title"] = "";
}


@if (ViewBag.Posts != null)
{
    <div class="d-flex flex-column">
        @foreach (var post in ViewBag.Posts)
        {
            <div class="m-3 w-100" style="min-width:320px; height:56px;">
                <div class="d-flex align-items-start">
                    <span class="text-muted small mb-0 me-2 pt-1" style="white-space:nowrap; min-width:90px;">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                    <div class="flex-grow-1">
                        <div class="fw-bold mb-0" style="font-size:1rem;">@post.Title</div>
                        <div class="text-secondary small mb-2">(@post.Source)</div>
                        <div class="text-muted small" style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis; max-width:440px;">
                            @((post.Commentary as string)?.Length > 90 ? (post.Commentary as string)?.Substring(0, 90) + "..." : post.Commentary)
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No posts available.</p>
}