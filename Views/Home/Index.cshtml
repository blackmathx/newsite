@{
	ViewData["Title"] = "";
}


@if (ViewBag.Posts != null)
{
	<div class="d-flex flex-column">
		@foreach (var post in ViewBag.Posts)
		{

			<div class="p-2 my-1" style="min-width:300px">
				@if (false)
				{
					<a href="/Admin/PostEdit/@post.Id" class="btn btn-secondary btn-sm">Edit</a>
					<a href="/Admin/PostDelete/@post.Id" class="btn btn-danger btn-sm">Delete</a>
				}
			<div class="d-flex align-items-start">
				<span class="text-muted small mb-0 me-2 pt-1"
					style="white-space:nowrap; min-width:90px;">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
				<div class="flex-grow-1">
					<a href="@post.Url" target="_blank">
						<div class="fw-bold mb-0" style="font-size:1rem;">@post.Title</div>
					</a>
					<div class="text-secondary small mb-2">(@post.Source)</div>
					<a href="@Url.Action("Post", "Home", new { id = post.Id })">
						<div>
							@((post.Commentary as string)?.Length > 75 ? (post.Commentary as string)?.Substring(0, 75) +
													"..." : post.Commentary)
						</div>
					</a>
					</div>
				</div>
			</div>
		}
	</div>
}
else
{
	<p>No posts available.</p>
}